<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:layout_marginTop="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/groupIconIv"
            android:layout_width="64dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_people_black_24dp" />

        <TextView
            android:id="@+id/groupTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm"
            android:layout_marginStart="4dp"

            android:layout_toEndOf="@+id/groupIconIv"
            android:text="Group Title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupTitleTv"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/groupIconIv"
            android:fontFamily="@font/ibm"
            android:text="Sender Name" />

        <TextView
            android:id="@+id/messageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupTitleTv"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/nameTv"
            android:fontFamily="@font/ibm"
            android:singleLine="true"
            android:text="The Message" />

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTv"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/ibm"
            android:layout_marginEnd="5dp"
            android:singleLine="true"
            android:text="The Message" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>