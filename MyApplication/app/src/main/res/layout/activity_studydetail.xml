<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TagsEditText="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_marginLeft="20dp"

            android:layout_width="122dp"

            android:layout_height="118dp"
            TagsEditText:src="@tools:sample/avatars[2]" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/ibm"
                android:text="삼성전자 IT 스터디"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView17"
                android:fontFamily="@font/ibm"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IT / 디지털 / 삼성전자"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="117dp"
                android:layout_height="42dp"
                android:layout_marginLeft="15dp"

                android:fontFamily="@font/ibm"
                android:text="[ 2 / 6 ]"
                android:textAlignment="center"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="145dp"
                android:layout_height="42dp"
                android:fontFamily="@font/ibm"
                android:text="방장 : 팔순이"
                android:textAlignment="center"
                android:textSize="15sp" />

            <Button
                android:id="@+id/textView88"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ibm"
                android:layout_marginRight="5dp"
                android:text="수정"
                android:background="@drawable/rounded"
                android:textAlignment="center"
                android:textSize="15sp" />

            <Button
                android:id="@+id/textView881"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/ibm"
                android:text="삭제"
                android:textAlignment="center"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_join"
                android:layout_width="0dp"
                android:fontFamily="@font/ibm"
                android:layout_height="45dp"
                android:background="@color/y1e"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="참가신청" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:fontFamily="@font/ibm"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/ye"
                android:text="관심있음" />
        </LinearLayout>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:fillViewport="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView133"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:fontFamily="@font/ibm"
                android:text="기업 이름"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/study_company"
                android:layout_width="331dp"
                android:fontFamily="@font/ibm"
                android:layout_height="26dp"
                android:text="삼성전자"
                android:layout_marginBottom="10dp"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:fontFamily="@font/ibm"
                android:text="스터디소개"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:fontFamily="@font/ibm"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:text="스터디소개스터디소개스터디소개스터디소개스터디소개스터디소개스터디소개스터디소개스터디소개스터디소개스터디소개스터디소디소개" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:fontFamily="@font/ibm"
                android:text="스터디 장소"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/online_studycafe"
                android:layout_width="match_parent"
                android:fontFamily="@font/ibm"
                android:layout_height="31dp"
                android:text="스터디 장소"
                android:layout_marginBottom="10dp"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:fontFamily="@font/ibm"

                android:text="스터디 지역"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/location_info"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:fontFamily="@font/ibm"
                android:text="스터디 장소"
                android:layout_marginBottom="10dp"
                android:textSize="15sp" />

            <!--
            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                TagsEditText:ignore="MissingClass" />
            -->

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:mcv_selectionColor="#C3D3B7"

                app:mcv_showOtherDates="all"></com.prolificinteractive.materialcalendarview.MaterialCalendarView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_date"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/datepicker_btn"
                android:layout_width="match_parent"
                android:fontFamily="@font/ibm"
                android:layout_height="wrap_content"
                android:background="@color/y1e"
                android:text="일정 추가하기" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>