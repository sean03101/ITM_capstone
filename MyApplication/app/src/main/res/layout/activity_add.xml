<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TagsEditText="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">



    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="45.6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<RelativeLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:background="@drawable/round_upload_background">-->

                <ImageView
                    android:id="@+id/iv_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="@color/ye"

                    android:scaleType="center" />

                <Button
                    android:id="@+id/btn_upload"
                    android:layout_width="171.2dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/customb"
                    android:gravity="center"
                    android:fontFamily="@font/ibm"
                    android:lineSpacingExtra="1.8sp"
                    android:text="+     커버 사진 업로드"

                    android:textColor="@color/white"
                    android:textSize="15.2sp" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="+"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="15.2sp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:paddingLeft="19.2dp"/>-->
            </RelativeLayout>
            <!--</RelativeLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="28dp"
                android:paddingRight="28dp">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="83dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm"
                        android:text="스터디제목"
                        android:textStyle="bold"
                        android:textSize="15.2sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="9dp"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:fontFamily="@font/ibm"
                            android:hint="스터디 이름을 입력해주세요"
                            android:imeOptions="actionNext"
                            android:paddingTop="12dp"
                            android:paddingBottom="12.4dp"
                            android:singleLine="true"
                            android:textSize="17.2sp" />

                        <Button
                            android:id="@+id/check_study_name"
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            android:layout_marginLeft="80dp"
                            android:background="@drawable/br"
                            android:fontFamily="@font/ibm"
                            android:text="중복 검사" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17.6dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm"
                        android:text="카테고리"
                        android:textStyle="bold"
                        android:textSize="15.2sp" />

                    <LinearLayout
                        android:id="@+id/ll_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="100dp"

                            android:layout_height="wrap_content" />

                        <Spinner
                            android:id="@+id/spinner2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="카테고리 선택하러 가기" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:layout_marginTop="8.4dp" />
                </LinearLayout>

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="vertical"-->
                <!--android:layout_marginTop="28.8dp">-->

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="15.2sp"-->
                <!--android:textColor="@color/color_06095e"-->
                <!--android:text="날짜"-->
                <!--/>-->

                <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="17.2sp"-->
                <!--android:textColor="@color/color_707070"-->
                <!--android:textColorHint="@color/color_707070"-->
                <!--android:hint=""-->
                <!--android:background="@color/white"-->
                <!--android:singleLine="true"-->
                <!--android:imeOptions="actionNext"-->
                <!--android:layout_marginTop="12dp"/>-->
                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17.6dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="회사"
                        android:textStyle="bold"
                        android:fontFamily="@font/ibm"
                        android:textSize="15.2sp" />

                    <LinearLayout
                        android:id="@+id/ll_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <Button
                            android:id="@+id/tv_company"
                            android:layout_width="164dp"
                            android:layout_height="38dp"
                            android:background="@drawable/br"
                            android:fontFamily="@font/ibm"
                            android:text="회사 선택하러 가기"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/study_show_result"
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:fontFamily="@font/ibm"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="회사 미선택" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:layout_marginTop="8.4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17.6dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm"
                        android:text="스터디카페"
                        android:textStyle="bold"
                        android:textSize="15.2sp" />

                    <LinearLayout
                        android:id="@+id/ll_studycafe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <Button
                            android:id="@+id/tv_studycafe"
                            android:layout_width="222dp"
                            android:layout_height="37dp"
                            android:background="@drawable/br"
                            android:fontFamily="@font/ibm"
                            android:text="스터디카페 선택하러 가기"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ibm"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:text="스터디카페 미선택" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:layout_marginTop="8.4dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23.6dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm"
                        android:text="참여 인원"
                        android:textStyle="bold"
                        android:textSize="15.2sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="49.2dp"
                        android:layout_marginTop="9.2dp">

                        <ImageView
                            android:id="@+id/btn_minus"
                            android:layout_width="172dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:padding="14dp"
                            android:src="@drawable/minus" />

                        <TextView
                            android:id="@+id/tv_peopleNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="0"
                            android:textSize="17.2sp" />

                        <ImageView
                            android:id="@+id/btn_plus"
                            android:layout_width="163dp"
                            android:layout_height="57dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="1dp"
                            android:padding="14dp"
                            android:src="@drawable/add" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23.6dp"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/switch_add"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/ibm"
                        android:layout_marginLeft="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="모집중" />

                    <Switch
                        android:id="@+id/switch_onoff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm"
                        android:layout_marginRight="10dp"
                        android:text="온라인" />

                    <Switch
                        android:id="@+id/switch_local"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ibm"
                        android:text="지역만 공개" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21.2dp">

                    <TextView
                        android:id="@+id/textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9.2dp"
                        android:fontFamily="@font/ibm"
                        android:text="모임 설명"
                        android:textStyle="bold"
                        android:textSize="15.2sp" />

                    <TextView
                        android:id="@+id/warning_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_textNumber"
                        android:layout_marginRight="28dp"
                        android:layout_toLeftOf="@+id/tv_textNumber"
                        android:text="100 자 이내로 입력해주세요"
                        android:textSize="14sp"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/et_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textview"
                        android:gravity="start"

                        android:hint="만나서 어떤 활동을 하실 건가요?"
                        android:minHeight="91.2dp"
                        android:paddingStart="9.2dp"
                        android:fontFamily="@font/ibm"
                        android:paddingTop="10dp"
                        android:paddingEnd="9.2dp"
                        android:paddingBottom="10dp"
                        android:textSize="15.2sp" />

                    <TextView
                        android:id="@+id/tv_textNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textview"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/ibm"


                        android:textSize="11.2sp" />
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_make"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/ibm"
        android:background="@drawable/customb"
        android:text="스터디 만들기"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>