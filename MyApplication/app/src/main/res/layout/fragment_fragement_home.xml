<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.home.HomeFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="409dp"

        android:layout_height="46dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="#8093AA"

            android:theme="@style/PrimaryButton"
            android:fontFamily="@font/ibm"
            android:text="무역/유통" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_margin="5dp"
            android:background="#8093AA"
            android:theme="@style/PrimaryButton"
            android:fontFamily="@font/ibm"
            android:layout_weight="1"
            android:text="영업/서비스" />

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_margin="5dp"
            android:background="#8093AA"
            android:theme="@style/PrimaryButton"
            android:fontFamily="@font/ibm"
            android:layout_weight="1"
            android:text="연구개발/설계" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:background="#8093AA"

            android:theme="@style/PrimaryButton"
            android:fontFamily="@font/ibm"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="건설/토목" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:layout_weight="4"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/adView">

        <Spinner
            android:id="@+id/spinner_search"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#CBDFF6"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/ibm"

            android:text="검색 카테고리"
            android:textSize="15sp"></Spinner>

        <EditText
            android:id="@+id/search_study_edittext"
            android:layout_width="272dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_round_corner"
            android:fontFamily="@font/ibm"
            android:hint="검색어를 입력하세요!"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <Button
            android:id="@+id/search_study_button"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="10dp"

            android:background="#00000000"
            android:drawableStart="@drawable/se" />


    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView1"

        android:layout_width="403dp"
        android:layout_height="419dp"
        android:layout_marginTop="2dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout3"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_studylist"

                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="match_parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_studylist1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_studylist2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_studylist3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_studylist4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_studylist5"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_studylist6"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_studylist7"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="409dp"

        android:layout_height="46dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:fontFamily="@font/ibm"
            android:layout_margin="5dp"
            android:background="#8093AA"
            android:theme="@style/PrimaryButton"
            android:layout_weight="1"
            android:text="경영/사무" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:background="#8093AA"
            android:theme="@style/PrimaryButton"
            android:fontFamily="@font/ibm"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="마케팅/홍보" />

        <Button
            android:id="@+id/button3"
            android:layout_margin="5dp"
            android:background="#8093AA"            android:theme="@style/PrimaryButton"
            android:fontFamily="@font/ibm"
            android:layout_width="0dp"

            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="IT/디지털" />

        <Button
            android:id="@+id/button4"
            android:layout_margin="5dp"
            android:background="#8093AA"            android:theme="@style/PrimaryButton"
            android:layout_width="0dp"

            android:fontFamily="@font/ibm"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="디자인" />
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="410dp"
        android:layout_height="57dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3940256099942544/6300978111"
        app:layout_constraintBottom_toTopOf="@+id/ScrollView1"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>