    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectFriendActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectFriendActivity_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="500dp"></androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/selectFriendActivity_button"
        android:layout_width="118dp"
        android:layout_height="60dp"
        android:background="@drawable/customb"
        android:fontFamily="@font/ibm"
        android:text="채팅방 만들기"
        android:textSize="15dp"
        android:textColor="@color/white" />
</LinearLayout>